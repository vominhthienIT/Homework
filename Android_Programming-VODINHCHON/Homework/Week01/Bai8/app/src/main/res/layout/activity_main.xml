<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rút Ngẫu Nhiên 3 Lá Bài"
        android:textSize="36sp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageView_la1"
            android:layout_width="120dp"
            android:layout_height="180dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="10dp"
            app:srcCompat="@drawable/b2fv" />

        <ImageView
            android:id="@+id/imageView_la2"
            android:layout_width="120dp"
            android:layout_height="180dp"
            android:layout_marginRight="15dp"
            app:srcCompat="@drawable/b2fv" />

        <ImageView
            android:id="@+id/imageView_la3"
            android:layout_width="120dp"
            android:layout_height="180dp"
            app:srcCompat="@drawable/b2fv" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/button_rutbai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            android:text="Rút Bài"
            android:textSize="24sp" />

        <Button
            android:id="@+id/button2_bobai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Bỏ Bài"
            android:textSize="24sp" />
    </LinearLayout>

</LinearLayout>